@model User;
<div class="AddMemberPage m-2">
    <div class="d-flex justify-content-center">
        <h5>Edit Member Form</h5>
    </div>
    <form class="Add-Form" method="post" asp-action="EditMember" enctype="multipart/form-data">
        <input type="text" class="form-control d-none" id="" asp-for="Id" readonly>
        <div class="row">
            <div class="col">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-control" id="Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-1">
            <input type="submit" class="btn btn-primary" value="Update" />
        </div>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}